
#include <iostream>
    using namespace std;
    int main()
    {
        int x;
        cout<<"Enter the number you want to check-"<<endl;
        cin>>x;

        if (x>0)
        {
            cout<<x<<" is Positive "<<endl;
        }
        else if(x<0)
        {
            cout<<x<<" is Negative"<<endl;
        }
        else
        {
            cout<<" It is zero"<<endl;
        }
        

    return 0;
    }
