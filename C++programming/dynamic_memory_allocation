    #include <iostream>
    using namespace std;
    int main()
    {
      int size;
      int *ip;

      cout<<"Enter number of values you want to print (size of the array): "<<endl;
      cin>>size;

      ip = new int[size];
      cout<<"Enter the values you want to print: "<<endl;
      for (int  i = 0; i < size; i++)
      {
         cin>>ip[i];
      }
      cout<<"Values are: "<<endl;
      for (int  i = 0; i < size; i++)
      {
         cout<<ip[i];
         cout<<endl;
      }
      
    return 0;
    }
