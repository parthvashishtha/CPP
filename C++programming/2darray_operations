    #include <iostream>
    using namespace std;
    int main()
    {
        int Myarr[3][3];
        int Myarr1[3][3] = {1,3,2,4,2,6,5,1,1};
        int Myarr2[3][3] = {{2,4,5},{1,2,3,},{6,9,8}};

        int A[3][3],B[3][3],addition[3][3],subtraction[3][3];

        

        cout<<endl<<"Enter values for first 3*3 matrix"<<endl;
        for (int  i = 0; i < 3; i++)
        {
            for (int  j = 0; j< 3; j++)
            {
               cin>>A[i][j];
            }

             
            
        }
        cout<<endl<<"Enter values for second 3*3 matrix"<<endl;
        for (int  i = 0; i < 3; i++)
        {
            for (int  j = 0; j< 3; j++)
            {
               cin>>B[i][j];
            }

             
            
        }

        cout<<endl<<"Values of first 3*3 matrix"<<endl;

        for (int  i = 0; i < 3; i++)
        {
            for (int  j = 0; j< 3; j++)
            {
               cout<<A[i][j]<<" ";
            }

            cout<<endl; 
            
        }
        
        cout<<endl<<"Values of second 3*3 matrix"<<endl;

        for (int  i = 0; i < 3; i++)
        {
            for (int  j = 0; j< 3; j++)
            {
               cout<<B[i][j]<<" ";
            }

            cout<<endl; 
            
        }

        

        for (int  i = 0; i < 3; i++)
        {
            for (int  j = 0; j < 3; j++)
            {
               addition[i][j]=A[i][j]+B[i][j];
               
            }
            
        }
        for (int  i = 0; i < 3; i++)
        {
            for (int  j = 0; j < 3; j++)
            {
               subtraction[i][j]=A[i][j]-B[i][j];
               
            }
            
        }

        cout<<"Addition of first and second matrix is:"<<endl;
        for (int  i = 0; i < 3; i++)
        {
            for (int  j = 0; j< 3; j++)
            {
               cout<<addition[i][j]<<" ";
            }

            cout<<endl; 
            
        }

        cout<<"Subraction of first and second matrix is:"<<endl;
        for (int  i = 0; i < 3; i++)
        {
            for (int  j = 0; j< 3; j++)
            {
               cout<<subtraction[i][j]<<" ";
            }

            cout<<endl; 
            
        }

        

    return 0;
    }
